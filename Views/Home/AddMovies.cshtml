<!--allow user to add a new movie to the list-->

@model MovieProject.Models.Movies

<div>
    <h1 class="text-center">Add a New Movie to the List</h1>
    <br />
    <div class="container col-4">
        <form method="post" asp-action="AddMovies">
            <div class="form-group">
                <label asp-for="Category">Category:</label>
                <input asp-for="Category" />
            </div>
            <div class="form-group">
                <label asp-for="Title">Title:</label>
                <input asp-for="Title" />
            </div>
            <div class="form-group">
                <label asp-for="Year">Year:</label>
                <input asp-for="Year" />
            </div>
            <div class="form-group">
                <label asp-for="Director">Director:</label>
                <input asp-for="Director" />
            </div>
            <div class="form-group">
                <label asp-for="Rating">Rating:</label>
                <select asp-for="Rating">
                    <option value="">Select one</option>
                    <option value="G">G</option>
                    <option value="PG">PG</option>
                    <option value="PG-13">PG-13</option>
                    <option value="R">R</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Edited">Edited:</label>
                <select asp-for="Edited">
                    <option value="">Select one</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="LentTo">Lent to:</label>
                <input asp-for="LentTo" />
            </div>
            <div class="form-group">
                <label asp-for="Notes">Notes:</label>
                <textarea asp-for="Notes" rows="5"></textarea>
            </div>
            <button type="submit" class="btn-primary">Add Movie</button>
            <br />
            <div asp-validation-summary="All"></div> <!--display validation errors here-->
        </form>
    </div>
</div>
